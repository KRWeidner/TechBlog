<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/project/{{blog.id}}">{{blog.blog_name}}</a>
    </h2>
    <p>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{blog.blog_post}}</span>
    </p>
  </div>
  <div class="col-md-7">
    <p>
      <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
    </p>
  </div>
</div>
{{/each}}
